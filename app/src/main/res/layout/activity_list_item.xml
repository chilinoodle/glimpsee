<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/activity_item_view"
    android:gravity="center_vertical">

    <ImageView
        android:contentDescription="Main icon for Activity"
        android:id="@+id/activity_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentStart="true"
        android:padding="1dp"
        android:alpha="0.2"
        tools:src="@drawable/ic_directions_walk_black_48dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/activity_icon"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Go for a walk"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryText"/>

        <TextView
            android:id="@+id/with_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="with Mazen"
            android:textSize="14sp"
            android:textColor="@color/colorSecondaryText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryText"
            tools:text="19:30"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/colorSecondaryText"
            tools:text="Tue, Mar 03"/>

    </LinearLayout>



</RelativeLayout>